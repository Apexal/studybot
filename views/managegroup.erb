<div class="row">
    <div class="col-xs-12">
        <div class="page-heading">
            <h1>Manage Group <%= @group['name'] %></h1>
        </div>
    </div>

    <div class="col-xs-12">
        <form action="/groups/<%= @group['id'] %>/manage" method="POST">
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" name="description" type="text" value="<%= @group['description'] %>" placeholder="Group description." required>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="public" <% if @group['private'] == 0 %>checked="checked"<% end %>> Public <span class="text-muted"> | Whether anyone can join it or not.</span> 
                </label>
            </div>
            
            <button class="btn btn-primary" type="submit">Save Group Info</button>
        </form>
    </div>
</div>